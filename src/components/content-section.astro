---
export interface Props {
  id: string;
  title: string;
}

const { title, id } = Astro.props;
---

<section
  id={id}
  class="
  flex
  scroll-mt-24
  flex-col
  items-center
  gap-2
  md:gap-4
  p-4
  shadow-2xl
  "
>
  <div class="flex flex-col items-center gap-2 md:gap-4">
    <slot name="startLogo" />
    <h2
      class="gradient-text text-center font-quicksand font-extrabold tracking-tight text-6xl"
    >
      {title}
    </h2>
  </div>
  <p class="text-center font-quicksand text-2xl">
    <slot name="lead" />
  </p>
  <slot />
</section>
